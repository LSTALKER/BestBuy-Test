<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="70dip" android:background="@drawable/commerce_box_middle"
	android:paddingLeft="20dip" android:paddingRight="20dip"
	android:paddingTop="15dip" android:paddingBottom="15dip">

	<ImageView android:id="@+id/right_arrow" android:src="@drawable/carrot_r"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentRight="true" android:layout_centerVertical="true" 
		android:contentDescription="@string/image_content_description"/>

	<TextView android:id="@+id/store_locator_distance"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_toLeftOf="@id/right_arrow" android:textStyle="bold"
		android:ellipsize="end" android:textColor="@color/dark_gray"
		android:textSize="13sp" android:gravity="right"
		android:layout_centerVertical="true" android:layout_marginRight="13dip" />

	<TextView android:id="@+id/store_locator_city"
		android:layout_toLeftOf="@id/store_locator_distance"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textStyle="bold" android:ellipsize="end" android:textColor="@color/default_text"
		android:textSize="15sp" android:layout_marginRight="10dip"
		android:layout_alignParentLeft="true" />

	<TextView android:id="@+id/store_locator_address"
		android:layout_below="@id/store_locator_city" android:layout_toLeftOf="@id/store_locator_distance"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:ellipsize="end" android:textColor="@color/dark_gray"
		android:textSize="13sp" android:layout_marginTop="3dip"
		android:layout_marginRight="10dip" android:layout_alignParentLeft="true" />

</RelativeLayout>
