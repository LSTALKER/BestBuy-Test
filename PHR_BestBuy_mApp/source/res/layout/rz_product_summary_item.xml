<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">

	<LinearLayout android:layout_width="fill_parent"
		android:padding="5dip" android:orientation="horizontal"
		android:layout_height="wrap_content">

		<TextView android:id="@+id/reward_zone_reciept_item_label"
			android:layout_weight="70" style="@style/RZBlackText.SmallMedium"
			android:padding="5dip" 
			android:layout_width="0dip" android:layout_height="wrap_content"
			android:text="@string/items_label_title" />

		<LinearLayout android:layout_width="wrap_content"
			android:paddingTop="1dip" android:layout_marginRight="2dip"
			android:layout_gravity="right" android:orientation="vertical"
			android:layout_height="wrap_content">

			<TextView android:id="@+id/reward_zone_reciept_cost" style="@style/RZBlackText.SmallMedium"
				android:singleLine="true" android:padding="1dip"
				android:layout_width="50dip" android:gravity="right"
				android:layout_height="wrap_content" />

			<TextView android:id="@+id/reward_zone_reciept_qty" style="@style/RZBlueText.SmallMedium"
				android:singleLine="true" android:padding="1dip"
				android:layout_width="50dip" android:layout_height="wrap_content"
				android:gravity="right" android:text="Qty 1" />
		</LinearLayout>

	</LinearLayout>

	<View android:id="@+id/rz_v_seperator_points"
		android:layout_width="fill_parent" android:layout_height="2dip"
		android:background="#cccccc" />
</LinearLayout>