<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:padding="10dip">
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_weight="1">
		<TextView
			android:id="@+id/product_review_rating_title"
			android:padding="2dip"
			android:layout_alignParentLeft="true"
			android:layout_width="fill_parent"
			android:singleLine="true"
			android:layout_height="wrap_content"
			android:textColor="#FF231F20"
			android:textSize="17sp"
			android:textStyle="bold" />
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/product_review_star_rating"
				android:padding="2dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dip" 
				android:contentDescription="@string/image_content_description"/>
			<TextView
				android:id="@+id/product_review_rating"
				android:padding="2dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#FF003B64"
				android:textSize="17sp"
				android:textStyle="bold" 
				android:layout_marginTop="2dip"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:textColor="#333">
			<TextView
				android:id="@+id/product_review_rating_text"
				android:padding="2dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:maxLines="2"
				android:ellipsize="end"
				android:textColor="#FF231F20" />
			<TextView
				android:id="@+id/product_review_submitted_by"
				android:singleLine="true"
				android:textSize="12sp"
				android:padding="2dip"
				android:text="September 9, 2010 by npsqt"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="#FF737474" />
		</LinearLayout>
	</LinearLayout>
	<ImageView
		android:layout_width="wrap_content"
		android:padding="2dip"
		android:layout_gravity="right|center_vertical"
		android:layout_weight=".1"
		android:layout_height="wrap_content"
		android:id="@+id/product_review_more_details_carrot"
		android:src="@drawable/carrot_r"
		android:contentDescription="@string/image_content_description" />
</LinearLayout>