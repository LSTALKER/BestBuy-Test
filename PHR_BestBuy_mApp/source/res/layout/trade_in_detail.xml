<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<RelativeLayout
		style="@style/header">
		<ImageView
			android:id="@+id/header_home"
			style="@style/header_logo"
			android:contentDescription="@string/image_content_description" />
		<TextView
			android:text="Trade-In Value"
			style="@style/text.header" />
		<include layout="@layout/header_cart_button" />
	</RelativeLayout>
	<ScrollView
		android:id="@+id/main_scroll"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#fff">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:background="#fff"
			android:textColor="#aaa">
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:paddingTop="8dip"
				android:paddingLeft="8dip"
				android:paddingRight="8dip"
				android:paddingBottom="0dip"
				android:layout_height="fill_parent"
				android:layout_gravity="center_vertical"
				android:background="#fff">
				<ImageView
					android:id="@+id/trade_in_details_icon"
					android:layout_width="150dip"
					android:layout_height="155dip"
					android:paddingBottom="5dip"
					android:paddingRight="10dip"
					android:scaleType="fitCenter" 
					android:contentDescription="@string/image_content_description"/>
				<LinearLayout
					android:orientation="vertical"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:layout_gravity="right"
					android:paddingTop="10dip"
					android:paddingBottom="10dip">
					<TextView
						android:id="@+id/trade_in_details_title"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:textSize="16dip"
						android:textStyle="bold"
						android:textColor="#333" 
						android:text="Borderlands"/>
					<TextView
						android:id="@+id/trade_in_details_platform"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:textSize="14dip"
						android:textStyle="bold"
						android:textColor="#333" 
						android:text="Xbox 360"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						style="commerce_text.h2.gray"
						android:paddingTop="20dip"
						android:text="Today's Trade-In:"/>	
					<TextView
						android:id="@+id/trade_in_details_price"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#0FA73B"
						android:textSize="18dip"
						android:gravity="right" 
						android:textStyle="bold"
						/>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:paddingLeft="10dip" 
				android:paddingRight="10dip">
				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#FF848585"
						android:textSize="17sp"
						android:maxHeight="113dip" 
						android:paddingLeft="5dip"
						android:textStyle="bold"
						android:text="Trade-In Details" />
				<LinearLayout
					android:layout_marginTop="0dip"
					android:layout_marginBottom="10dip"
					style="@style/commerce_box.white">
					
					<RelativeLayout
						style="@style/commerce_box.inner.top"
						android:layout_width="fill_parent"
						android:padding="12dip"
						android:id="@+id/alert_description_rl"
						android:layout_height="wrap_content">
						<TextView
							android:padding="2dip"
							android:id="@+id/trade_in_details_details"
							android:layout_centerVertical="true"
							android:layout_alignParentLeft="true"
							android:textColor="#333" 
						android:textSize="14dip"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="To be accepted, a game must be in the original case, include the original artwork and be playable. We limit any customer to not more than three copies of the same title for the same platform." />
					</RelativeLayout>
				</LinearLayout>
				<RelativeLayout
					android:layout_marginTop="5dip"
					android:layout_marginBottom="10dip"
					style="@style/commerce_box.white"
					android:layout_width="fill_parent"
					android:id="@+id/trade_in_details_stores_rl"
					android:padding="12dip"
					android:layout_height="wrap_content">
					<TextView
						android:layout_width="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_centerVertical="true"
						android:layout_height="wrap_content"
						android:padding="2dip"
						android:textSize="16dip"
						android:textStyle="bold"
						android:textColor="#333"
						android:text="Trade-In Stores" />
					<ImageView
						android:src="@drawable/carrot_r"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="2dip"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="10dip" 
						android:contentDescription="@string/image_content_description"/>
				</RelativeLayout>
				
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>