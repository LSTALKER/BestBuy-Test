<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<RelativeLayout
		style="@style/header">
		<ImageView
			android:id="@+id/header_home"
			style="@style/header_logo" 
			android:contentDescription="@string/image_content_description"/>	
		<TextView
			android:text="@string/trade_in_title"
			style="@style/text.header"
			android:layout_toLeftOf="@+id/header_cart"
			android:gravity="center" />
		<RelativeLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_marginTop="5dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<ImageView
				android:id="@+id/header_cart"
				android:src="@drawable/btn_cart"
				android:layout_alignParentRight="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="3dip"
				android:onClick="cartListener"
				android:contentDescription="@string/image_content_description" />
			<RelativeLayout
				android:id="@+id/header_cart_badge"
				android:background="@drawable/btn_cart_badge"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_marginRight="10dip"
				android:layout_marginTop="0dip">
				<TextView
					android:id="@+id/header_cart_badge_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/noti_initial_count"
					android:textColor="#fff"
					android:textSize="11sp"
					android:textStyle="bold"
					android:gravity="center"
					android:layout_centerInParent="true" />
			</RelativeLayout>
		</RelativeLayout>
	</RelativeLayout>
	<ScrollView
		android:id="@+id/main_scroll"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#fff">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="#fff"
			android:textColor="#aaa">
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:paddingTop="8dip"
				android:paddingLeft="8dip"
				android:paddingRight="8dip"
				android:paddingBottom="0dip"
				android:layout_height="fill_parent"
				android:background="#fff">
				<ImageView
					android:id="@+id/alert_icon"
					android:layout_width="150dip"
					android:layout_height="155dip"
					android:paddingBottom="5dip"
					android:paddingRight="10dip"
					android:scaleType="fitCenter" 
					android:contentDescription="@string/image_content_description"/>
				<LinearLayout
					android:orientation="vertical"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:layout_gravity="right|center_vertical"
					android:paddingBottom="3dip">
					<TextView
						android:id="@+id/alert_title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#FF231F20"
						android:textSize="17sp"
						android:maxHeight="113dip" />
					<TextView
						android:id="@+id/alert_expiration_date"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="13sp"
						android:textColor="#FFFF0000" />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:padding="10dip">
				<RelativeLayout
					android:layout_marginTop="5dip"
					android:layout_marginBottom="10dip"
					style="@style/commerce_box.white"
					android:layout_width="fill_parent"
					android:id="@+id/alert_learn_more_rl"
					android:padding="12dip"
					android:layout_height="wrap_content">
					<TextView
						android:layout_width="wrap_content"
						android:id="@+id/alert_learn_more"
						android:layout_alignParentLeft="true"
						android:layout_centerVertical="true"
						android:layout_height="wrap_content"
						android:padding="2dip"
						style="@style/RZBlackText.SmallMedium"
						android:text="@string/alert_learn_more" />
					<ImageView
						android:src="@drawable/carrot_r"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/alert_learn_more_carrot"
						android:padding="2dip"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="10dip" 
						android:contentDescription="@string/image_content_description"/>
				</RelativeLayout>
				<TextView
					android:id="@+id/title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#FF231F20"
					android:textSize="17sp"
					android:maxHeight="113dip"
					android:text="@string/offer_details" />
				<LinearLayout
					android:layout_marginTop="0dip"
					android:layout_marginBottom="10dip"
					style="@style/commerce_box.white">
					<RelativeLayout
						style="@style/commerce_box.inner.top"
						android:layout_width="fill_parent"
						android:padding="12dip"
						android:id="@+id/alert_description_rl"
						android:layout_height="wrap_content">
						<TextView
							android:padding="2dip"
							android:id="@+id/alert_description"
							android:layout_centerVertical="true"
							android:layout_alignParentLeft="true"
							style="@style/RZBlackText.SmallMedium"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" />
					</RelativeLayout>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>