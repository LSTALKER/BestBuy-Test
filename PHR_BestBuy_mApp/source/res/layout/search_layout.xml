<LinearLayout style="@style/default_style"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:paddingLeft="5dip"
	android:layout_gravity="center" android:gravity="center_vertical"
	android:paddingTop="1dip">
	
     <LinearLayout 
         android:focusable="true"
         android:focusableInTouchMode="true" android:layout_width="0px"
         android:layout_height="0px" />

	<EditText android:id="@+id/generic_search"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:hint="@string/search_hint" android:textColor="#656565"
		android:inputType="text" android:imeOptions="actionGo"
		android:drawableLeft="@drawable/icon_search" android:drawablePadding="5dip"
		android:layout_weight="1" android:layout_marginRight="5dip" />

	<Spinner android:id="@+id/searchresult_sortby"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:drawSelectorOnTop="true" android:prompt="@string/sort_by_prompt"
		android:gravity="right" android:layout_marginLeft="5dip" />

</LinearLayout>