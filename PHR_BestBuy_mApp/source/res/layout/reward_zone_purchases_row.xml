<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="horizontal">
	<LinearLayout android:layout_width="68dip"
		android:layout_height="68dip" android:orientation="vertical"
		android:background="@drawable/bg_recently_viewed_product"
		android:layout_gravity="center_vertical|left" android:layout_margin="6dip">
		<ImageView android:id="@+id/reward_zone_purchase_image" 
			android:layout_gravity="center_vertical|center_horizontal"
			android:layout_margin="4dip" android:maxWidth="60dip" android:maxHeight="60dip"
			android:layout_width="fill_parent" android:layout_height="fill_parent" 
			android:contentDescription="@string/image_content_description"/>
	</LinearLayout>
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_gravity="center_vertical|center" android:paddingLeft="10dip"
		android:layout_weight="1">
		<TextView android:id="@+id/reward_zone_purchase_name"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:textStyle="bold" android:textSize="12sp" />
		<TextView android:id="@+id/reward_zone_purchase_description"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:textSize="11sp" />
		<TextView android:id="@+id/reward_zone_purchase_amount"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:textSize="11sp" />
	</LinearLayout>
	<ImageView android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:paddingRight="10dip"
		android:src="@drawable/carrot_r" android:gravity="center_vertical" 
		android:contentDescription="@string/image_content_description"/>
</LinearLayout>