<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >

    <shape
        android:innerRadiusRatio="2.17"
        android:shape="ring"
        android:thicknessRatio="28"
        android:useLevel="false" >

        <size
            android:height="256dip"
            android:width="256dip" />

        <gradient
            android:angle="0"
            android:endColor="#FEF5F6"
            android:startColor="#E51A38"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>