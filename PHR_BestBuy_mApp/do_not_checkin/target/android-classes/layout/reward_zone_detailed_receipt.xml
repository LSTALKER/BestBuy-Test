<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">
	<include
		layout="@layout/rz_header" />
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<!-- Product Summary -->
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:background="#f7f7f7">
			<TextView
				android:textStyle="bold"
				android:textColor="#2f2a2b"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="18sp"
				android:paddingLeft="15dip"
				android:paddingTop="10dip"
				android:singleLine="true"
				android:text="Product Summary" />
			<com.bestbuy.android.ui.ReceiptDetailsLayout
				android:id="@+id/reward_zone_pdl_product_summary"
				android:layout_width="fill_parent"
				android:layout_margin="10dip"
				android:orientation="vertical"
				android:layout_height="wrap_content">
			</com.bestbuy.android.ui.ReceiptDetailsLayout>

			<!-- Order Summary -->
			<TextView
				android:textStyle="bold"
				android:textColor="#2f2a2b"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="18sp"
				android:paddingLeft="15dip"
				android:paddingTop="10dip"
				android:singleLine="true"
				android:text="Order Summary" />
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_margin="10dip"
				android:orientation="vertical"
				android:layout_height="wrap_content"
				style="@style/commerce_box.white">
				<LinearLayout
					android:layout_width="fill_parent"
					android:paddingLeft="5dip"
					android:paddingRight="5dip"
					android:orientation="horizontal"
					android:layout_height="wrap_content">
					<TextView
						android:id="@+id/reward_zone_reciept_product_total_label"
						android:layout_weight="70"
						android:textSize="12sp"
						android:padding="5dip"
						android:layout_centerVertical="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Product Total" />
					<LinearLayout
						android:layout_width="wrap_content"
						android:paddingTop="1dip"
						android:layout_marginRight="2dip"
						android:layout_gravity="right"
						android:orientation="vertical"
						android:layout_height="wrap_content">
						<TextView
							android:id="@+id/reward_zone_reciept_product_total"
							android:singleLine="true"
							android:padding="1dip"
							android:layout_width="60dip"
							android:gravity="right"
							android:layout_height="wrap_content"
							/>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:layout_width="fill_parent"
					android:paddingLeft="5dip"
					android:paddingRight="5dip"
					android:orientation="horizontal"
					android:layout_height="wrap_content">
					<TextView
						android:id="@+id/reward_zone_reciept_product_sandh_label"
						android:layout_weight="70"
						android:textSize="12sp"
						android:padding="5dip"
						android:layout_centerVertical="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Shipping And Handling" />
					<LinearLayout
						android:layout_width="wrap_content"
						android:paddingTop="1dip"
						android:layout_marginRight="2dip"
						android:layout_gravity="right"
						android:orientation="vertical"
						android:layout_height="wrap_content">
						<TextView
							android:id="@+id/reward_zone_reciept_product_sandh_total"
							android:singleLine="true"
							android:padding="1dip"
							android:layout_width="60dip"
							android:gravity="right"
							android:layout_height="wrap_content"
							 />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:layout_width="fill_parent"
					android:paddingLeft="5dip"
					android:paddingRight="5dip"
					android:orientation="horizontal"
					android:layout_height="wrap_content">
					<TextView
						android:id="@+id/reward_zone_reciept_product_salestax_label"
						android:layout_weight="70"
						android:textSize="12sp"
						android:padding="5dip"
						android:layout_centerVertical="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Sales Tax" />
					<LinearLayout
						android:layout_width="wrap_content"
						android:paddingTop="1dip"
						android:layout_marginRight="2dip"
						android:layout_gravity="right"
						android:orientation="vertical"
						android:layout_height="wrap_content">
						<TextView
							android:id="@+id/reward_zone_reciept_product_salestax_total"
							android:singleLine="true"
							android:padding="1dip"
							android:layout_width="60dip"
							android:gravity="right"
							android:layout_height="wrap_content"
							 />
					</LinearLayout>
				</LinearLayout>
				<View
					android:id="@+id/rz_v_seperator_points"
					android:layout_width="fill_parent"
					android:layout_height="2dip"
					android:background="#cccccc" />
				<LinearLayout
					android:layout_width="fill_parent"
					android:padding="5dip"
					android:orientation="horizontal"
					android:layout_height="wrap_content">
					<TextView
						android:id="@+id/reward_zone_reciept_order_total_label"
						style="@style/RZBlueText.MediumBig"
						android:layout_weight="80"
						android:padding="5dip"
						android:layout_centerVertical="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Order Total" />
					<LinearLayout
						android:layout_width="wrap_content"
						android:paddingTop="1dip"
						android:layout_marginRight="2dip"
						android:layout_gravity="right"
						android:orientation="vertical"
						android:layout_height="wrap_content">
						<TextView
							android:id="@+id/reward_zone_reciept_order_total"
							style="@style/RZBlackText.MediumBig"
							android:singleLine="true"
							android:padding="1dip"
							android:layout_width="90dip"
							android:gravity="right"
							android:layout_height="wrap_content"
							/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>



			<!-- Store Details -->
			<TextView
				android:textStyle="bold"
				android:textColor="#2f2a2b"
				android:id="@+id/reward_zone_reciept_product_view_store_details_header"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="18sp"
				android:paddingLeft="15dip"
				android:paddingTop="10dip"
				android:singleLine="true"
				android:text="Store Details" />
			<LinearLayout
				android:layout_width="fill_parent"
				android:id="@+id/reward_zone_reciept_product_view_store_clicky_layout"
				android:layout_margin="10dip"
				android:orientation="vertical"
				android:layout_height="wrap_content"
				style="@style/commerce_box.white">
				<LinearLayout
					android:layout_width="fill_parent"
					android:padding="5dip"
					android:orientation="horizontal"
					android:layout_height="wrap_content"
					style="@style/commerce_box.inner.top">
					<TextView
						android:id="@+id/reward_zone_reciept_product_view_store_tv"
						android:layout_weight="70"
						style="@style/RZBlackText.MediumSmall"
						android:padding="5dip"
						android:layout_centerVertical="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="View Maple Grove Best Buy" />
					<LinearLayout
						android:layout_width="wrap_content"
						android:paddingTop="5dip"
						android:paddingRight="2dip"
						android:layout_gravity="right"
						android:orientation="vertical"
						android:layout_height="wrap_content">
						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/carrot_r"
							android:paddingRight="5dip"
							android:contentDescription="@string/image_content_description"/>
					</LinearLayout>
				</LinearLayout>
				<View
					android:id="@+id/rz_v_seperator_points"
					android:layout_width="fill_parent"
					android:layout_height="2dip"
					android:background="#cccccc" />
				<LinearLayout
					android:layout_width="fill_parent"
					android:id="@+id/reward_zone_reciept_product_call_store_clicky_layout"
					android:padding="5dip"
					android:orientation="horizontal"
					android:layout_height="wrap_content"
					style="@style/commerce_box.inner.bottom">
					<TextView
						android:id="@+id/reward_zone_reciept_product_call_store_tv"
						android:layout_weight="70"
						style="@style/RZBlackText.MediumSmall"
						android:padding="5dip"
						android:layout_centerVertical="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Call 762-191-0101" />
					<LinearLayout
						android:layout_width="wrap_content"
						android:paddingTop="5dip"
						android:paddingRight="2dip"
						android:layout_gravity="right"
						android:orientation="vertical"
						android:layout_height="wrap_content">
						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/carrot_r"
							android:paddingRight="5dip"
							android:contentDescription="@string/image_content_description"/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>