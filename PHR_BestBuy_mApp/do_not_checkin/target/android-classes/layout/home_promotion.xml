<?xml version="1.0" encoding="utf-8"?>
<com.bestbuy.android.ui.CommerceBox
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:CommerceBox="http://schemas.android.com/apk/res/com.bestbuy.android"
	style="@style/commerce_box.inner"
	CommerceBox:checkmark="gone"
	android:gravity="center_vertical">
	<LinearLayout
		style="@style/default_style"
		android:orientation="horizontal">
		<LinearLayout
			android:layout_width="66dip"
			android:layout_height="66dip"
			android:orientation="vertical"
			android:layout_gravity="center_vertical|left"
			android:layout_margin="2dip">
			<ImageView
				android:id="@+id/home_promotion_image"
				android:layout_gravity="center_vertical|center_horizontal"
				android:layout_margin="2dip"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:contentDescription="@string/image_content_description" />
		</LinearLayout>
		<LinearLayout
			style="@style/default_style"
			android:orientation="vertical"
			android:layout_gravity="center"
			android:paddingLeft="5dip">
			<TextView
				android:id="@+id/home_promotion_title"
				style="@style/commerce_text.bold"
				android:text="@string/some_promo_goes_text"
				android:paddingBottom="0dip" />
		</LinearLayout>
	</LinearLayout>
</com.bestbuy.android.ui.CommerceBox>