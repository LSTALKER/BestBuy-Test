<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="#f7f7f7">
	<include layout="@layout/rz_header" />
	<ScrollView android:layout_width="fill_parent" android:scrollbars = "none"
		android:layout_height="fill_parent" android:background="#f7f7f7">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="vertical">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal"
				android:layout_marginTop="5dip">

				<LinearLayout android:layout_width="fill_parent"
					 android:layout_height="wrap_content"
					android:orientation="vertical">
					<TextView android:text="@string/msg_to_cashier"
						android:textStyle="bold" android:id="@+id/msg_to_cashier"
						android:textColor="#000000" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:textSize="16sp" android:layout_marginTop="5dip"
						android:layout_marginLeft="16dip"  android:layout_marginRight="16dip"  android:layout_marginBottom="5dip"/>
					<TextView android:text="" android:id="@+id/reward_zone_offer_title"
						android:textColor="#000000" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:textSize="15sp" android:layout_marginBottom="5dip" 
						android:layout_marginLeft="16dip"  android:layout_marginRight="16dip" />
					<TextView android:id="@+id/reward_zone_offer_expiration"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
					    android:textColor="#FFbf2943"  android:layout_marginBottom="5dip"
					    android:layout_marginLeft="16dip"  android:layout_marginRight="16dip"
						android:textSize="13sp" android:textStyle = "bold"/>
					<ImageView android:id="@+id/divider" android:layout_marginBottom="5dip"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:background="@drawable/divider_1" android:layout_marginTop="6dip" 
						android:contentDescription="@string/image_content_description"/>

				</LinearLayout>
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_margin="10dip" android:layout_height="fill_parent"
				android:orientation="vertical">

				<Button android:layout_gravity="center" android:gravity="left|center"
					android:id="@+id/view_offer" android:layout_height="wrap_content"
					android:layout_width="fill_parent" android:text="View offer details"
					android:drawableRight="@drawable/carrot_r" android:textColor ="#231f20"
					android:textSize="16sp" android:textStyle="bold" 
					android:paddingRight="12dip" android:paddingLeft="15dip"
					android:paddingTop="8dip" android:paddingBottom="8dip"
					style="@style/commerce_box.yellow"></Button>

				<TextView android:layout_width="wrap_content" android:layout_marginLeft="14dip"
					android:layout_height="wrap_content" android:text="@string/member_rz_card_text"
					android:layout_marginTop="7dip" android:layout_marginBottom="9dip"
					android:textStyle="bold" android:textSize="16sp" android:textColor="#737474" />
				
					<LinearLayout 
						android:id = "@+id/rz_card_holder" android:layout_width="wrap_content"
						android:layout_height="wrap_content"  android:layout_gravity = "center_horizontal"
						android:layout_marginBottom="13dip" android:gravity="center" style="@style/commerce_box.white">
						
						<LinearLayout android:layout_width="fill_parent"
							android:layout_height="wrap_content" 
							android:orientation="vertical">
							
							<TextView android:id="@+id/rz_user_name" android:layout_width="wrap_content"
								android:layout_height="wrap_content" android:textColor="#ffffff"
								android:layout_gravity="center" android:layout_marginTop = "50dip" 
								android:layout_marginBottom = "5dip"/>
							
							<TextView android:id="@+id/rz_member_id" android:layout_width="wrap_content"
								android:layout_height="wrap_content" android:textColor="#ffffff"
								android:layout_gravity="center" android:layout_marginBottom = "20dip"/>
							
							<TextView android:id="@+id/rz_contact_number" 
								android:layout_width="wrap_content" android:layout_height="wrap_content"
								android:textColor="#ffffff" android:layout_gravity="center" android:textStyle="bold"/>
						</LinearLayout>	
						
					</LinearLayout>
					
				<TextView android:layout_width="wrap_content"  android:layout_marginLeft="14dip"
					android:layout_height="wrap_content" android:text="Cashier Instructions"
					android:textStyle="bold" android:textSize="16sp" android:textColor="#737474"
					android:layout_marginBottom="9dip"></TextView>

				<LinearLayout android:orientation="vertical"
					android:paddingLeft="10dip" android:paddingTop="13dip"
					android:paddingBottom="13dip"  android:id="@+id/rz_offer_rl_whitebox_click"
					android:layout_height="fill_parent" style="@style/commerce_box.curvewhite"
					android:layout_weight="1.0" android:layout_width="fill_parent"
					android:layout_gravity="center_horizontal">
					<TextView android:layout_width="fill_parent"
						android:drawablePadding="10dip" android:layout_height="wrap_content"
						android:drawableLeft="@drawable/bullet_list_1" android:text="Enter RZ member ID."
						android:textSize="14sp" android:textColor="#000000"
						android:gravity="center_vertical" android:layout_marginLeft="5dip"
						android:layout_marginBottom = "5dip"></TextView>
					<TextView android:layout_width="fill_parent"
						android:drawablePadding="10dip" android:layout_height="wrap_content"
						android:drawableLeft="@drawable/bullet_list_2" android:text="Scan qualifying product UPC(s)."
						android:textSize="14sp" android:textColor="#000000"
						android:gravity="center_vertical" android:layout_marginLeft="5dip"
						android:layout_marginBottom = "5dip"></TextView>
					<TextView android:layout_width="fill_parent"
						android:drawablePadding="10dip" android:layout_height="wrap_content"
						android:drawableLeft="@drawable/bullet_list_3" android:text="Scan all other products."
						android:textSize="14sp" android:textColor="#000000"
						android:gravity="center_vertical" android:layout_marginLeft="5dip"
						android:layout_marginBottom = "5dip"></TextView>
					<TextView android:layout_width="fill_parent"
						android:drawablePadding="10dip" android:layout_height="wrap_content"
						android:drawableLeft="@drawable/bullet_list_4" android:text="Press F8 Total."
						android:textSize="14sp" android:textColor="#000000"
						android:gravity="center_vertical" android:layout_marginLeft="5dip"
						android:layout_marginBottom = "5dip"></TextView>
					<TextView android:layout_width="fill_parent"
						android:drawablePadding="10dip" android:layout_height="wrap_content"
						android:drawableLeft="@drawable/bullet_list_5" android:text="Acknowledge value package prompt."
						android:textSize="14sp" android:textColor="#000000"
						android:gravity="center_vertical" android:layout_marginLeft="5dip"
						></TextView>
				</LinearLayout>

			</LinearLayout>

		</LinearLayout>
	</ScrollView>
</LinearLayout>