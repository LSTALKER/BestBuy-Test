<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/product_compare_main"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<RelativeLayout
		style="@style/header">
		<ImageView
			android:id="@+id/header_home"
			style="@style/header_logo" 
			android:contentDescription="@string/image_content_description"/>
		<TextView
			android:text="@string/compare_title"
			style="@style/text.header" />
		<include layout="@layout/header_cart_button"  />
	</RelativeLayout>
	<LinearLayout
		android:id="@+id/srchresult_header"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingTop="5dip"
		android:paddingBottom="5dip"
		android:gravity="center"
		android:background="#FFe8e8e9">
		<ImageView
			android:id="@+id/product_compare_overview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/tab_overview" 
			android:contentDescription="@string/image_content_description"/>
		<ImageView
			android:id="@+id/product_compare_tech_specs"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/tab_techspecs" 
			android:contentDescription="@string/image_content_description"/>
	</LinearLayout>
	<View
		style="@style/horizontal_line" />
	<LinearLayout
		style="@style/default_style"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/product_compare_button_prev"
			style="@style/default_style_wrap"
			android:layout_height="fill_parent"
			android:layout_gravity="left|center"
			android:paddingLeft="10dip"
			android:paddingRight="5dip"
			android:paddingTop="5dip"
			android:paddingBottom="5dip"
			android:src="@drawable/carrot_l"
			android:contentDescription="@string/image_content_description"/>
		<TextView
			android:id="@+id/product_compare_left_title"
			style="@style/commerce_text.bold"
			android:layout_weight="1"
			android:paddingTop="10dip"
			android:paddingBottom="10dip"
			android:gravity="center"
			android:layout_width="fill_parent" />
		<TextView
			android:id="@+id/product_compare_right_title"
			style="@style/commerce_text.bold"
			android:layout_weight="1"
			android:paddingTop="10dip"
			android:paddingBottom="10dip"
			android:gravity="center"
			android:layout_width="fill_parent" />
		<ImageView
			android:id="@+id/product_compare_button_next"
			android:layout_height="fill_parent"
			style="@style/default_style_wrap"
			android:layout_gravity="right|center"
			android:paddingRight="10dip"
			android:paddingLeft="5dip"
			android:paddingTop="5dip"
			android:paddingBottom="5dip"
			android:src="@drawable/carrot_r"
			android:contentDescription="@string/image_content_description"/>
	</LinearLayout>
	<View
		style="@style/horizontal_line" />
	<ListView
		android:id="@+id/product_compare_listview"
		style="@style/default_style"
		android:cacheColorHint="#00000000" />
</LinearLayout>
