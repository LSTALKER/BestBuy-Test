<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#FFFFFFFF">

	<include android:id="@+id/header" layout="@layout/header2" />

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="left"
		android:textColor="#5a5a5a" android:textStyle="bold" android:padding="5dip"
		android:background="#ddd" android:text="@string/store_events" />

	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:fillViewport="true"
		android:fadingEdge="none">
		<LinearLayout android:id="@+id/events_container"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:paddingBottom="5dip" />
	</ScrollView>

</LinearLayout>
