<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="#f7f7f7">
	<LinearLayout 
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:background="@drawable/rz_commerce_whitebox" 
		android:padding="5dip" android:layout_margin="10dip"
		>
		 <ScrollView android:layout_width="fill_parent" android:layout_margin="3dip"
			android:layout_height="fill_parent" android:fillViewport="true" android:layout_gravity="center"
			android:scrollbarStyle="outsideInset" android:fadingEdge="vertical">
			<LinearLayout 
			    android:layout_width="fill_parent" android:layout_height="fill_parent"
			    >
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:orientation="vertical"
					android:paddingTop="10dip">
					<LinearLayout android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:orientation="horizontal">
						<RelativeLayout android:layout_width="110dip" android:layout_height="87dip"
							android:layout_marginLeft="5dip"
							android:background="@drawable/bg_cert">
							<TextView style="@style/RZGreyText.Big" android:id="@+id/reward_zone_certificate_amount"
								android:layout_width="wrap_content" android:layout_height="wrap_content"
								android:text="$5" android:layout_centerInParent="true" />
						</RelativeLayout>
		
						<LinearLayout android:layout_width="fill_parent"
							android:paddingLeft="5dip" android:layout_height="wrap_content"
							android:orientation="vertical">
		
							<TextView android:id="@+id/reward_zone_certificate_name" android:text="@string/member_text" android:textStyle="bold"
								android:textColor="#2f2a2b" android:singleLine="true"
								android:layout_width="wrap_content" android:layout_height="wrap_content"
								android:textSize="18sp" />
		
							<TextView android:id="@+id/reward_zone_certificate_member_id"
								android:textColor="@color/black" 
								android:layout_width="wrap_content" android:layout_height="wrap_content"
								android:textSize="14sp" android:paddingTop="3dip"/>
		
							<TextView android:id="@+id/reward_zone_certificate_expiration"
								android:textStyle="bold" android:layout_width="fill_parent" android:layout_height="wrap_content"
								android:textColor="#FFbf2943"
								android:textSize="12sp" android:paddingTop="3dip"/>
		
						</LinearLayout>
					</LinearLayout>
		
				    <LinearLayout
				    	style="@style/default_style"
				    	android:padding="10dip"
				    	android:orientation="vertical">
						<TextView android:id="@+id/reward_zone_certificate_title_thirty_digit"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:textColor="#4C4C4C" android:textStyle="bold"
							android:paddingTop="10dip" android:singleLine="true" android:textSize="19sp"
							android:text="Certificate #:" />
						
						<TextView 
						    android:id="@+id/reward_zone_certificate_thirty_digit_code"
							android:textColor="#595959" android:textSize="16dip"
							android:paddingTop="5dip"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							 />
			
						<TextView android:id="@+id/reward_zone_certificate_certificate_details"
							android:layout_marginTop="5dip" android:textColor="#4C4C4C" android:textStyle="bold"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:singleLine="true" android:text="Certificate Details" android:textSize="20sp"/>
						<TextView
							android:id="@+id/reward_zone_certificate_10_digit_number"
							android:textColor="#595959"
							android:layout_width="fill_parent" android:layout_height="wrap_content"
							android:textSize="16dip"/>
						<TextView
							android:textColor="#595959"
							android:layout_width="fill_parent" android:layout_height="wrap_content"
							android:textSize="16sp" android:text="Online Only"/> 
							
						 <TextView
							android:textColor="#595959"
							android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingTop="10dip"
							android:textSize="16sp" android:maxLines="100" android:text="@string/certificate_terms"/> 
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		 </ScrollView>
	 </LinearLayout>
</LinearLayout>