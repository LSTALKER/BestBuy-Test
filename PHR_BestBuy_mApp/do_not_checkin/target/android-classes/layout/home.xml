<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:CommerceBox="http://schemas.android.com/apk/res/com.bestbuy.android"
	style="@style/default_style"
	android:layout_height="fill_parent"
	android:background="#f1f2f2">
	<com.bestbuy.android.ui.draggable.DraggableGallery 
    	android:id="@+id/draggable_gallery" 
    	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent"/>

	<LinearLayout
		android:id="@+id/home_header"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="#e7e7e7"
		android:layout_alignParentTop="true">
		<include
			layout="@layout/header" />
	</LinearLayout>
	
	<LinearLayout
		android:layout_below="@id/home_header"
           android:gravity="center"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:id="@+id/home_featured_ad_layout">
           <LinearLayout
			android:id="@+id/home_featured_ad_progress"
			android:layout_width="fill_parent"
			android:layout_height="66dip"
			android:orientation="horizontal"
			android:gravity="center"
			android:background="#fff">				
				<ProgressBar
					android:id="@+id/home_featured_ad_progress_bar"
	        		android:indeterminateDrawable="@drawable/home_progress"
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"/>
	        	<TextView 
	        		android:id="@+id/home_featured_ad_progress_bar_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/loading_deals_text"
					android:textColor="#CACACA"
					android:textStyle="bold"/>	
	    </LinearLayout>
	    <com.bestbuy.android.ui.CommerceBox
			xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:CommerceBox="http://schemas.android.com/apk/res/com.bestbuy.android"
		    style="@style/commerce_box.inner"
		    android:background="@drawable/white_box_middle"
		    CommerceBox:checkmark="gone"
		    android:gravity="center_vertical"
		    android:id="@+id/home_featured_ad_banner"
		    android:visibility="gone"
		    android:layout_height="70dip" >
		    <LinearLayout
		    	style="@style/default_style"
		    	android:orientation="horizontal">
					<ImageView
					android:id="@+id/home_featured_ad_banner_image"
					android:layout_width="60dip"
					android:layout_height="60dip"
					android:padding="8dip"
					android:contentDescription="@string/image_content_description"/>
				   	<TextView
				   		android:id="@+id/home_featured_ad_banner_text"
				   		style="@style/commerce_text.bold"
				   		android:paddingBottom="0dip" 
				   		android:textColor="@color/default_text"/>
			</LinearLayout>
		</com.bestbuy.android.ui.CommerceBox>
		<View style="@style/home_horizontal_line"/>         
	</LinearLayout>
	<LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_alignParentBottom="true">
           <LinearLayout
           	   android:id="@+id/home_notifcations_shadow"
	           android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           android:orientation="horizontal"
	           android:gravity="center"
	           android:background="@drawable/bg_notifications_shadow"
				android:layout_marginBottom="44dip">
	           <ImageView
					android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/home_page_circle_0"
			        android:layout_marginRight="4dip"
					android:background="@drawable/page_circle_active"
					android:contentDescription="@string/image_content_description"/>
			  <ImageView
					android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/home_page_circle_1"
			        android:layout_marginLeft="4dip"
					android:background="@drawable/page_circle_inactive"
					android:contentDescription="@string/image_content_description"/>
           </LinearLayout>
	</LinearLayout>
	<SlidingDrawer
	        android:id="@+id/home_notifcations_slider"
	        android:handle="@+id/home_notifications_handle"
	        android:content="@+id/home_notifications_layout"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        >
	 
	        <LinearLayout
	            xmlns:android="http://schemas.android.com/apk/res/android"
	            android:id="@+id/home_notifications_handle"
	            android:gravity="center"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/bg_notifications_bar_inactive">
	            <RelativeLayout
				android:id="@+id/home_notifications_badge"
				android:background="@drawable/oval_notification"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="5dip"
				android:visibility="gone"
				android:layout_marginTop="1dip"
				android:minHeight="16dip"
				android:minWidth="34dip">
				<TextView
					android:id="@+id/home_notifications_number"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="2"
					android:textColor="#000"
					android:textSize="12sp"
					android:textStyle="bold"
					android:gravity="center"
					android:paddingLeft="10dip"
					android:paddingRight="10dip"
					android:layout_centerInParent="true" />
			</RelativeLayout>
			   	<TextView
			   	android:id="@+id/home_notifications_title"
				android:textSize="18sp"
				android:textStyle="bold"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/noti_title" 
				android:layout_gravity="center"/>
	         </LinearLayout>
	 
	        <LinearLayout
	            android:id="@+id/home_notifications_layout"
	            android:gravity="center"
	            android:clickable="false"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="#fff">
			   	<LinearLayout
					android:id="@+id/no_notifications_tab"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="horizontal"
					android:gravity="center"
					android:visibility="gone"
					android:clickable="true"
					>
			        <TextView 
			        	android:id="@+id/no_notifications_tab_text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/no_new_noti_text"
						android:layout_marginLeft="10dip"
						android:textSize="15dip"
						android:textColor="@color/black"
						/>
		    	</LinearLayout>
			   	<LinearLayout
					android:id="@+id/offers_tab_progress"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="horizontal"
					android:gravity="center"
					android:visibility="gone"
					android:clickable="true"
					>
					<ProgressBar
						android:id="@+id/offers_tab_progress_bar"
			        	android:indeterminateDrawable="@drawable/offers_progress"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			       		/>
			        <TextView 
			        	android:id="@+id/offers_tab_progress_bar_text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/update_noti_text"
						android:layout_marginLeft="10dip"
						/>
		    	</LinearLayout>
	            <ListView
					android:id="@android:id/list"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:divider="#cccccc"
					android:dividerHeight="1dip"
					android:listSelector="@drawable/listbg"
					android:cacheColorHint="#00000000" />
	            <TextView
                    android:id="@+id/no_notifications_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:enabled="false"
                    android:text="@string/no_notifications" />
	        </LinearLayout>
	    </SlidingDrawer>
	
	    <Button android:id="@+id/dummy_btn" android:layout_width="fill_parent" android:layout_height="44dip"
	        android:background="@color/transparent" android:layout_alignParentBottom="true"
	        android:visibility="gone"/>
	

</RelativeLayout>