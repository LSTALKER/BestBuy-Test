<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CommerceBox="http://schemas.android.com/apk/res/com.bestbuy.android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- Start: Header -->

    <include
        android:id="@+id/header"
        layout="@layout/header2" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ddd"
        android:gravity="left"
        android:padding="5dip"
        android:text="@string/ecorebates_title"
        android:textColor="#5a5a5a"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/localRebateFinderTitleTV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbar"
        android:gravity="center_vertical|left"
        android:paddingLeft="24dip"
        android:paddingRight="5dip"
        android:text="@string/loading_text"
        android:textColor="#737474"
        android:textSize="13sp"
        android:textStyle="bold" />
    <!-- End: Header -->

    <ListView
        android:id="@+id/android:list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:cacheColorHint="@color/transparent"
        android:divider="#FFcccccc"
        android:dividerHeight="1dip"
        android:fadingEdge="none"
        android:focusable="true"
        android:scrollbars="none" 
        android:listSelector="@drawable/listbg"/>

    <View
        android:id="@+id/rebateFooterLine"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#FFcccccc"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/rebateFooterLL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="24dip"
        android:layout_marginTop="5dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/rebateFooterTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rebate_info_text"
            android:textColor="#737474"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dip"
            android:text="Terms"
            android:textColor="#003b64"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>